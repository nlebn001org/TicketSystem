@model TicketSystem.Web.ViewModels.LoginModel

<h2>Login page.</h2>

<a asp-action="Register" asp-controller="Account">Register</a> <!--reg link-->

<form asp-action="Login" asp-controller="Account" asp-antiforgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Username">Input Username</label>
            <input type="text" asp-for="Username" />
            <span asp-validation-for="Username"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Input Password</label>
            <input type="password" asp-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Login" />
        </div>
    </div>
</form>