@model TicketSystem.Web.ViewModels.MyAccountModel;

<h2>Your account</h2>
<h3>Here you can see actual information about your account and change your data.</h3>
<h4>If you want to change a password, you should type your previous password and enter 2x your new</h4>
<h4>All unchanged data will not be changed</h4>

<form onsubmit="if(!confirm('Is the form filled out correctly?')){return false;}" asp-action="MyAccount" asp-controller="Account" asp-antiforgery="true" >
    <div class="validation" asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label asp-for="Username">Username: @Model.Username</label>
        <input type="hidden" name="Username" value="@Model.Username" />
    </div>
    <div class="form-group">
        <label asp-for="Role">Role: @Model.Role.RoleName</label>
        <input type="hidden" name="Role" value="@Model.Role" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Your email is: @(Model.Email == null ? "Empty" : Model.Email)</label>
        <input type="email" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name">Your name is: @(Model.Name == null ? "Empty" : Model.Name)</label>
        <input type="text" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Surname">Your surname is: @(Model.Surname == null ? "Empty" : Model.Surname)</label>
        <input type="text" asp-for="Surname" />
        <span asp-validation-for="Surname"></span>
    </div>
    <div class="form-group">
        <label asp-for="OldPassword"></label>
        <input type="password" asp-for="OldPassword" />
        <span asp-validation-for="OldPassword"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewPassword"></label>
        <input type="password" asp-for="NewPassword" />
        <span asp-validation-for="NewPassword"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input type="password" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>

    <div class="form-group">
        <input type="submit"  value="Save Changes" />
    </div>
</form>

<div>
    <form onsubmit="if(!confirm('Account will be deleted.')){return false;}" asp-action="DeleteAccount" asp-controller="Account">
        <div class="form-group">
            <input type="submit" value="Delete my account." />
        </div>
    </form>
</div>
    

